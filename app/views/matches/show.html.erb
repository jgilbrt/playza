        <i class="bi bi-trophy-fill me-2 fs-3"></i>
        <h1 class="mb-0 fs-4 flex-grow-1 fw-bold" style="margin: 0;">
          Game Hub: <%= @match.opponent_name %>
          <span class="fs-6 text-light ms-2" style="display: inline-block; vertical-align: middle;">
            <i class="bi bi-calendar-event"></i> <%= @match.date.strftime("%b %d, %Y %H:%M") %>
          </span>
        </h1>
                <i class="bi bi-trophy-fill me-2 fs-3"></i>

      </div>
      <div class="card-body bg-white border rounded-bottom-4" style="text-align: center;">
        <div id="score-or-countdown" class="mb-2">
          <% if @match.has_happened? %>
            <p class="mb-0 fs-5">
              <span class="fw-semibold text-primary"><i class="bi bi-graph-up-arrow"></i> Score Line:</span>
              <span class="badge bg-success ms-2 fs-5 px-3 py-2"><%= @match.score_own %></span>
              <span class="mx-2 fs-5">-</span>
              <span class="badge bg-danger fs-5 px-3 py-2"><%= @match.score_opponent %></span>
            </p>
          <% else %>
            <p class="mb-0 fs-5">
              <span class="fw-semibold text-primary"><i class="bi bi-clock-history"></i> Time to game:</span>
              <span id="countdownTimer" class="badge bg-info ms-2 fs-5 px-3 py-2">Loading...</span>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

  <!-- Lineup Picker -->
  <div class="row mb-5">
    <div class="col-12">
      <div class="lineup-picker-section shadow-pro">
        <div class="section-title mb-4">
          <i class="bi bi-people-fill"></i>
          Lineup Picker
        </div>
        <%= form_with url: lineup_match_path(@match), method: :post, local: true do |f| %>
          <p class="mb-4 text-muted fs-5">
            <i class="bi bi-info-circle"></i>
            Select <span class="fw-bold">11 starters</span> and <span class="fw-bold">5 substitutes</span>:
          </p>
          <div class="row">
            <!-- Starters -->
            <div class="col-md-6 mb-3">
              <div class="lineup-role-label mb-3 text-primary"><i class="bi bi-person-check-fill"></i> Starters (11)</div>
              <% 11.times do |i| %>
                <div class="lineup-row">
                  <label class="form-label mb-0">#<%= i+1 %></label>
                  <select name="lineup[starters][]" class="form-select form-select-lg rounded-3 shadow-sm border-primary" required>
                    <option value="">Select Player</option>
                    <% @team_players.each do |p| %>
                      <option value="<%= p.id %>" <%= @lineup_starters[i] == p.id ? 'selected' : '' %>>
                        <%= p.full_name %>
                      </option>
                    <% end %>
                  </select>
                </div>
              <% end %>
            </div>
            <!-- Substitutes -->
            <div class="col-md-6 mb-3">
              <div class="lineup-role-label mb-3 text-secondary"><i class="bi bi-person-plus-fill"></i> Substitutes (5)</div>
              <% 5.times do |i| %>
                <div class="lineup-row">
                  <label class="form-label mb-0">#<%= i+1 %></label>
                  <select name="lineup[substitutes][]" class="form-select form-select-lg rounded-3 shadow-sm border-secondary" required>
                    <option value="">Select Player</option>
                    <% @team_players.each do |p| %>
                      <option value="<%= p.id %>" <%= @lineup_substitutes[i] == p.id ? 'selected' : '' %>>
                        <%= p.full_name %>
                      </option>
                    <% end %>
                  </select>
                </div>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-end">
            <%= f.submit "Save Lineup", class: "btn btn-primary mt-3 px-4 shadow-sm fw-bold btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
