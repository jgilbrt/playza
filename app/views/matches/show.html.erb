<script src="/assets/controllers/Winwheel.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function() {
  <% if defined?(@match) && !@match.has_happened? %>
    function countdown() {
      const targetDate = new Date("<%= @match.date.iso8601 %>");
      const now = new Date();
      let diff = targetDate - now;

      if (diff <= 0) {
        const timer = document.getElementById("countdownTimer");
        if (timer) timer.textContent = "Game time!";
        return;
      }

      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      diff -= days * (1000 * 60 * 60 * 24);

      const hours = Math.floor(diff / (1000 * 60 * 60));
      diff -= hours * (1000 * 60 * 60);

      const minutes = Math.floor(diff / (1000 * 60));
      diff -= minutes * (1000 * 60);

      const seconds = Math.floor(diff / 1000);

      const timer = document.getElementById("countdownTimer");
      if (timer) timer.textContent = `${days}d ${hours}h ${minutes}m ${seconds}s`;

      setTimeout(countdown, 1000);
    }
    countdown();
  <% end %>

  const dickPlayerSelect = document.getElementById("dickPlayerSelect");
  const spinWheelBtn = document.getElementById("spinWheelBtn");
  const wheelResult = document.getElementById("wheelResult");
  const dickItemInput = document.getElementById("dickItemInput");
  const saveDickBtn = document.getElementById("saveDickBtn");
  const dickModalElement = document.getElementById("dickModal");

  const dickModal = new bootstrap.Modal(dickModalElement);

  document.querySelectorAll(".openDickModalBtn").forEach(btn => {
    btn.addEventListener("click", () => {
      wheelResult.textContent = "";
      dickItemInput.value = "";
      dickPlayerSelect.value = "";
      spinWheelBtn.disabled = true;
      saveDickBtn.style.display = "none";
      dickModal.show();
    });
  });

  dickPlayerSelect.addEventListener("change", () => {
    spinWheelBtn.disabled = !dickPlayerSelect.value;
    wheelResult.textContent = "";
    dickItemInput.value = "";
    saveDickBtn.style.display = "none";
  });

  const wheel = new Winwheel({
    canvasId: 'dickWheelCanvas',
    numSegments: 8,
    segments: [
      { fillStyle: '#ff6961', text: 'Forgetting Kit' },
      { fillStyle: '#fdfd96', text: 'Late Arrival' },
      { fillStyle: '#77dd77', text: 'Own Goal' },
      { fillStyle: '#84b6f4', text: 'Missing Sitter' },
      { fillStyle: '#fdcae1', text: 'Yellow Card' },
      { fillStyle: '#cbaacb', text: 'Drunk Performance' },
      { fillStyle: '#ffb347', text: 'Moaner of the Match' },
      { fillStyle: '#aec6cf', text: 'Slip & Fall' }
    ],
    animation: {
      type: 'spinToStop',
      duration: 5,
      spins: 8,
      callbackFinished: (indicatedSegment) => {
        wheelResult.textContent = `Result: ${indicatedSegment.text}`;
        dickItemInput.value = indicatedSegment.text;
        saveDickBtn.style.display = "inline-block";
      }
    }
  });

  spinWheelBtn.addEventListener("click", () => {
    wheel.stopAnimation(false);
    wheel.rotationAngle = 0;
    wheel.draw();
    wheel.startAnimation();
  });
});

// New Match Modal JS
document.addEventListener("DOMContentLoaded", function () {
  const checkbox = document.getElementById("matchHappenedCheckbox");
  const happenedDetails = document.getElementById("happenedDetails");
  const scoreInput = document.getElementById("scoreOwnInput");
  const scorersSelectors = document.getElementById("scorersSelectors");
  const players = <%= raw(@team_players.to_json(only: [:id, :name, :full_name])) %>;

  function updateScorerSelectors() {
    const score = parseInt(scoreInput.value) || 0;
    scorersSelectors.innerHTML = "";
    for (let i = 0; i < score; i++) {
      const div = document.createElement("div");
      div.className = "mb-2";
      const select = document.createElement("select");
      select.full_name = `match[scorers_attributes][${i}][player_id]`;
      select.className = "form-select form-select-lg rounded-3 shadow-sm border-info";
      select.required = true;
      const defaultOption = document.createElement("option");
      defaultOption.value = "";
      defaultOption.textContent = "Select Scorer";
      defaultOption.disabled = true;
      defaultOption.selected = true;
      select.appendChild(defaultOption);
      players.forEach(player => {
        const option = document.createElement("option");
        option.value = player.id;
        option.textContent = `${player.full_name} (${player.full_name})`;
        select.appendChild(option);
      });
      div.appendChild(select);
      scorersSelectors.appendChild(div);
    }
  }

  checkbox.addEventListener("change", function () {
    if (checkbox.checked) {
      happenedDetails.style.display = "block";
      scoreInput.value = 1;
      scoreInput.dispatchEvent(new Event('input'));
    } else {
      happenedDetails.style.display = "none";
      scorersSelectors.innerHTML = "";
    }
  });

  scoreInput.addEventListener("input", updateScorerSelectors);
  scoreInput.addEventListener("change", updateScorerSelectors);

  if (checkbox.checked) {
    happenedDetails.style.display = "block";
    updateScorerSelectors();
  } else {
    happenedDetails.style.display = "none";
  }
});
</script>
