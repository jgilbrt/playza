<!DOCTYPE html>
<html>
  <head>
    <title>Playza</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  </head>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <body class="bg-gray-50">
    <!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-black fixed-top">
  <div class="container-fluid d-flex justify-content-between align-items-center w-100">

    <!-- Left: Navigation Links -->
    <div class="d-flex gap-3">
      <%= link_to "MatchHub", matches_path, class: "nav-link text-white" %>
      <%= link_to "Players", players_path, class: "nav-link text-white" %>
      <%= link_to "Payments", payments_path, class: "nav-link text-white" %>
    </div>

    <!-- Center: Logo -->
      <div class="text-white fw-bold">
        <%= link_to root_path do %>
          <%= image_tag 'playza.png', alt: 'Playza logo', style: 'height: 30px; width: auto;' %>
        <% end %>
      </div>

    <!-- Right: Team Name | Notification | Avatar Dropdown -->
    <div class="d-flex align-items-center gap-3">

      <!-- Team name -->
      <span class="text-white"><%= current_user.team.name if current_user&.team %></span>

      <!-- Notification Bell -->
      <i class="bi bi-bell text-white fs-5"></i>

      <!-- Avatar with Dropdown -->
        <% if current_user %>
          <div class="dropdown">
            <a class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <% if current_user.team&.avatar&.attached? %>
                <%= image_tag current_user.team.avatar.variant(resize_to_fill: [32, 32]), alt: "Avatar", class: "rounded-circle me-2", width: 32, height: 32 %>
              <% else %>
                <%= image_tag "https://via.placeholder.com/32", alt: "Avatar", class: "rounded-circle me-2", width: 32, height: 32 %>
              <% end %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><%= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %></li>
              <li><%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
            </ul>
          </div>
        <% end %>

    </div>
  </div>
</nav>

    <!-- Main content -->
    <main class="container mt-5 pt-5">
      <%= yield %>
    </main>
  </body>
</html>
