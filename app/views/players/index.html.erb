<h1 class="mb-4">Players</h1>

<table class="table table-striped table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Goals Scored</th>
      <th>Appearances</th>
      <th>Assists</th>
      <th>DOTD Count</th>
      <th>POTM Count</th>
      <th>Hangover Count</th>
      <th>Payment Status</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.email %></td>
        <td><%= player.role || "Player" %></td>
        <td><%= player.goals_scored || 0 %></td>
        <td><%= player.appearances || 0 %></td>
        <td><%= player.assists || 0 %></td>
        <td><%= player.dotd_count || 0 %></td>
        <td><%= player.potm_count || 0 %></td>
        <td><%= player.hangover_count || 0 %></td>
        <td><%= player.payment_status || "Unknown" %></td>
        <td class="text-center">
          <%= link_to "Edit", edit_user_path(player), class: "btn btn-sm btn-outline-primary me-2" %>
          <%= link_to "Chase", chase_payment_user_path(player), method: :post, class: "btn btn-sm btn-outline-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add New Player", new_user_path, class: "btn btn-primary mt-4" %>
